---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';
import { calculateReadingTime } from '../../utils/readingTime';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Enrich posts with computed reading time; tags come from frontmatter now
const processedPosts = posts.map(post => ({
  ...post,
  readingTime: calculateReadingTime(post.body ?? ''),
  tags: post.data.tags,
}));

// Featured post is explicitly marked, falling back to first post
const featuredIdx = processedPosts.findIndex(p => p.data.featured);
const featuredPost = featuredIdx >= 0
  ? processedPosts.splice(featuredIdx, 1)[0]
  : processedPosts.shift();
const remainingPosts = processedPosts;
---

<BaseLayout
  title="Blog | Prince Jain"
  description="Thoughts on Product Management, AI, and Building."
  breadcrumbs={[
    { name: "Home", url: "https://princejain.me" },
    { name: "Blog" },
  ]}
>
  <!-- Blog Header -->
  <section class="blog-header">
    <div class="container">
      <div class="blog-header__content">
        <div class="blog-header__icon-wrap animate-fade-up">
          <span class="blog-header__icon">✍️</span>
        </div>
        <h1 class="blog-header__title animate-fade-up"
          style="animation-delay: 80ms;">
          Blog
        </h1>
        <p class="blog-header__subtitle animate-fade-up"
          style="animation-delay: 140ms;">
          Thoughts on Product Management, AI, and Building.
        </p>
        <div class="blog-header__stats animate-fade-up"
          style="animation-delay: 200ms;">
          <span class="blog-header__stat">
            <strong>{posts.length}</strong> articles
          </span>
          <span class="blog-header__separator">·</span>
          <span class="blog-header__stat">
            Topics: AI, Product, Tech
          </span>
        </div>
      </div>
    </div>
  </section>
  


  <!-- Featured Post -->
  {featuredPost && (
    <section class="blog-featured animate-fade-up" style="animation-delay: 100ms;">
      <div class="container">
        <BlogCard
          title={featuredPost.data.title}
          description={featuredPost.data.description}
          pubDate={featuredPost.data.pubDate || new Date()}
          slug={featuredPost.slug}
          readingTime={featuredPost.readingTime}
          tags={featuredPost.tags}
          variant="featured"
        />
      </div>
    </section>
  )}

  <!-- Posts Grid -->
  <section class="blog-grid">
    <div class="container">
      <div class="blog-grid__header animate-fade-up" style="animation-delay: 150ms;">
        <h2 class="blog-grid__title">All Articles</h2>
        <span class="blog-grid__count">{remainingPosts.length} posts</span>
      </div>
      
      <div class="posts-grid stagger-children">
        {remainingPosts.map((post, index) => (
          <div class="animate-fade-up" style={`animation-delay: ${200 + index * 50}ms; height: 100%;`}>
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate || new Date()}
              slug={post.slug}
              readingTime={post.readingTime}
              tags={post.tags}
            />
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Blog Header */
  .blog-header {
    padding: var(--space-16) 0 var(--space-12);
    position: relative;
  }

  .blog-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: radial-gradient(
      ellipse 60% 80% at 50% 0%,
      hsla(28, 100%, 70%, 0.08),
      transparent
    );
    pointer-events: none;
  }

  .blog-header__content {
    max-width: 600px;
  }

  /* Icon wrapper — decorative circle with animated glow ring */
  .blog-header__icon-wrap {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: var(--radius-xl);
    background: linear-gradient(
      135deg,
      var(--color-accent-glow),
      hsla(28, 100%, 60%, 0.06)
    );
    margin-bottom: var(--space-6);
    position: relative;
  }

  .blog-header__icon-wrap::after {
    content: '';
    position: absolute;
    inset: -6px;
    border-radius: var(--radius-xl);
    border: 2px solid var(--color-accent-glow);
    animation: iconRingPulse 3s ease-in-out infinite;
  }

  .blog-header__icon {
    display: inline-block;
    font-size: 2.75rem;
    line-height: 1;
    animation: iconFloat 4s ease-in-out infinite;
  }

  .blog-header__title {
    font-size: var(--text-5xl);
    font-weight: 700;
    margin-bottom: var(--space-3);
    background: linear-gradient(
      to bottom right,
      var(--gray-900),
      var(--gray-600)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .blog-header__subtitle {
    font-size: var(--text-xl);
    color: var(--gray-600);
    line-height: 1.55;
    margin-bottom: var(--space-5);
  }

  .blog-header__stats {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-sm);
    color: var(--gray-500);
  }

  .blog-header__stat strong {
    color: var(--color-accent);
    font-weight: 600;
  }

  .blog-header__separator {
    color: var(--gray-300);
  }

  /* Featured Section */
  .blog-featured {
    padding-bottom: var(--space-8);
  }

  /* Posts Grid Section */
  .blog-grid {
    padding: var(--space-8) 0 var(--space-24);
  }

  .blog-grid__header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--gray-200);
  }

  .blog-grid__title {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--gray-800);
  }

  .blog-grid__count {
    font-size: var(--text-sm);
    color: var(--gray-500);
    font-family: var(--font-mono);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-header {
      padding: var(--space-12) 0 var(--space-8);
    }

    .blog-header__icon-wrap {
      width: 64px;
      height: 64px;
    }

    .blog-header__icon {
      font-size: 2rem;
    }

    .blog-header__title {
      font-size: var(--text-4xl);
    }

    .blog-header__subtitle {
      font-size: var(--text-lg);
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .blog-grid__header {
      flex-direction: column;
      gap: var(--space-2);
    }
  }

</style>
