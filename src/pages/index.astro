---
/**
 * Homepage — thin orchestrator.
 * All section logic, styles, and scripts live in their own components.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/home/HeroSection.astro';
import SelectedWork from '../components/home/SelectedWork.astro';
import DigitalGarden from '../components/home/DigitalGarden.astro';
import SpeakingEvents from '../components/home/SpeakingEvents.astro';
import Inspirations from '../components/home/Inspirations.astro';
import { workHighlights } from '../data/works';
import { workshopProjects, homelabServices } from '../data/projects';
---

<BaseLayout
  title="Prince Jain - Product Leader & Builder"
  description="Prince Jain — Group Product Manager at Flipkart. Building 0→1 agentic AI experiences and next-gen AI-native products."
  preloadImage="/profile-photo-1.webp"
  breadcrumbs={[{ name: "Home" }]}
>
  <HeroSection />
  <SelectedWork items={workHighlights} />
  <DigitalGarden projects={workshopProjects} services={homelabServices} />
  <SpeakingEvents />
  <Inspirations />
</BaseLayout>
