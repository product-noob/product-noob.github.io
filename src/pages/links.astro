---
import BaseLayout from '../layouts/BaseLayout.astro';
import { links } from '../data/links';
---

<BaseLayout
  title="Links | Prince Jain"
  description="Find me on LinkedIn, Twitter, GitHub, and more."
  breadcrumbs={[
    { name: "Home", url: "https://princejain.me" },
    { name: "Links" },
  ]}
>
  <section class="page-header">
    <div class="container">
      <div class="page-header__content">
        <h1 class="page-header__title">Links</h1>
        <p class="page-header__subtitle">Find me on the internet.</p>
      </div>
    </div>
  </section>

  <section class="links-section">
    <div class="container">
      <div class="links-list">
        {links.map((link) => (
          <a
            href={link.url}
            class="link-card"
            target={link.url.startsWith('http') || link.url.startsWith('mailto') ? '_blank' : undefined}
            rel={link.url.startsWith('http') ? 'noopener noreferrer' : undefined}
          >
            <span class="link-card__icon">{link.icon}</span>
            <div class="link-card__content">
              <span class="link-card__name">{link.name}</span>
              <span class="link-card__description">{link.description}</span>
            </div>
            <svg class="link-card__arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    padding-bottom: var(--space-8);
  }

  .links-section {
    padding: var(--space-8) 0 var(--space-24);
  }

  .links-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    max-width: 560px;
  }

  .link-card {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-5) var(--space-6);
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .link-card:hover {
    border-color: var(--gray-300);
    box-shadow: var(--shadow-card-hover);
    transform: translateY(-3px);
  }

  .link-card__icon {
    font-size: 1.5rem;
    line-height: 1;
    flex-shrink: 0;
  }

  .link-card__content {
    flex: 1;
    min-width: 0;
  }

  .link-card__name {
    display: block;
    font-weight: 600;
    font-size: var(--text-base);
    color: var(--gray-900);
    margin-bottom: 2px;
  }

  .link-card__description {
    display: block;
    font-size: var(--text-sm);
    color: var(--gray-500);
  }

  .link-card__arrow {
    flex-shrink: 0;
    color: var(--gray-400);
    transition: all var(--transition-fast);
  }

  .link-card:hover .link-card__arrow {
    color: var(--color-accent);
    transform: translate(2px, -2px);
  }

  @media (max-width: 768px) {
    .link-card {
      padding: var(--space-4) var(--space-5);
    }
  }
</style>
