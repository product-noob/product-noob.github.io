---
/**
 * /tools/google-meet-summariser ‚Äî Product mini-page for the
 * ChatGPT Google Meet Summariser Chrome extension.
 * Showcases features, how-it-works flow, and links to install.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';

const chromeStoreUrl =
  'https://chromewebstore.google.com/detail/chatgpt-google-meet-summa/kofkiemddfpekcadmaeheonbbkhnclhj';

interface Feature {
  icon: string;
  title: string;
  description: string;
}

const features: Feature[] = [
  {
    icon: 'ü§ñ',
    title: 'AI-Powered Summaries',
    description:
      'Leverages ChatGPT to distill long meetings into concise, actionable summaries ‚Äî capturing key decisions, action items, and follow-ups.',
  },
  {
    icon: '‚ö°',
    title: 'Real-Time Transcription',
    description:
      'Automatically captures every word spoken during your Google Meet call. No manual note-taking, no missed context.',
  },
  {
    icon: 'üö´',
    title: 'No Bots, No Interruptions',
    description:
      'Runs silently as a Chrome extension. No awkward bots joining your call, no "Who just joined?" moments.',
  },
  {
    icon: 'üîí',
    title: 'Privacy First',
    description:
      'Your meeting data stays in your browser. Nothing is stored on external servers. You control everything.',
  },
  {
    icon: 'üìã',
    title: 'Action Items & Decisions',
    description:
      'Automatically identifies action items, key decisions, and follow-ups ‚Äî so nothing falls through the cracks.',
  },
  {
    icon: 'üåç',
    title: 'Multi-Language Support',
    description:
      'Works across multiple languages, making it ideal for diverse, global teams communicating across borders.',
  },
];

interface Step {
  number: string;
  title: string;
  description: string;
}

const steps: Step[] = [
  {
    number: '01',
    title: 'Install the Extension',
    description:
      'Add the ChatGPT Google Meet Summariser from the Chrome Web Store. It takes under 10 seconds.',
  },
  {
    number: '02',
    title: 'Join Your Meeting',
    description:
      'Open any Google Meet call as you normally would. The extension activates automatically.',
  },
  {
    number: '03',
    title: 'Get Your Summary',
    description:
      'When the meeting ends, receive an instant AI-generated summary with key points, decisions, and action items.',
  },
];
---

<BaseLayout
  title="Google Meet Summariser | Prince Jain"
  description="AI-powered Chrome extension that automatically summarises your Google Meet calls using ChatGPT. Never miss a crucial detail again."
  breadcrumbs={[
    { name: "Home", url: "https://princejain.me" },
    { name: "Tools", url: "https://princejain.me/tools" },
    { name: "Google Meet Summariser" },
  ]}
>
  <!-- Hero -->
  <section class="gms-hero">
    <div class="container">
      <div class="gms-hero__content">
        <div class="gms-hero__badge">
          <span class="gms-hero__badge-dot"></span>
          Chrome Extension
        </div>
        <h1 class="gms-hero__title">
          Never miss a detail in your
          <span class="gms-hero__accent">Google Meet</span> calls.
        </h1>
        <p class="gms-hero__subtitle">
          A lightweight Chrome extension that uses ChatGPT to
          automatically record, transcribe, and summarise your
          meetings in real-time. Focus on the conversation ‚Äî let AI
          handle the notes.
        </p>
        <div class="gms-hero__cta">
          <a
            href={chromeStoreUrl}
            class="gms-btn gms-btn--primary"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
              <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2"/>
              <path d="M21.17 8H12" stroke="currentColor" stroke-width="2"/>
              <path d="M3.95 6.06L8.54 14" stroke="currentColor" stroke-width="2"/>
              <path d="M10.88 21.94L15.46 14" stroke="currentColor" stroke-width="2"/>
            </svg>
            Add to Chrome ‚Äî Free
          </a>
          <a href="/privacy-policy" class="gms-btn gms-btn--ghost">
            Privacy Policy
          </a>
        </div>
        <p class="gms-hero__note">
          Free &middot; No sign-up required &middot; Works instantly
        </p>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="gms-features">
    <div class="container">
      <div class="gms-section-header">
        <h2 class="gms-section-header__title">
          Everything you need, nothing you don't.
        </h2>
        <p class="gms-section-header__desc">
          Built for busy professionals who want clear, accurate
          meeting notes without extra work.
        </p>
      </div>
      <div class="gms-features__grid">
        {features.map((feat) => (
          <div class="gms-feature-card">
            <span class="gms-feature-card__icon">{feat.icon}</span>
            <h3 class="gms-feature-card__title">{feat.title}</h3>
            <p class="gms-feature-card__desc">
              {feat.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="gms-steps">
    <div class="container">
      <div class="gms-section-header">
        <h2 class="gms-section-header__title">
          Up and running in 3 steps.
        </h2>
      </div>
      <div class="gms-steps__list">
        {steps.map((step) => (
          <div class="gms-step">
            <span class="gms-step__number">{step.number}</span>
            <div class="gms-step__content">
              <h3 class="gms-step__title">{step.title}</h3>
              <p class="gms-step__desc">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Who It's For -->
  <section class="gms-audience">
    <div class="container">
      <div class="gms-audience__card">
        <h2 class="gms-audience__title">
          Built for people who run meetings, not take notes.
        </h2>
        <div class="gms-audience__tags">
          {[
            'Product Managers',
            'Engineering Leads',
            'Recruiters',
            'Sales Teams',
            'Consultants',
            'Founders',
            'Agencies',
            'Project Managers',
          ].map((role) => (
            <span class="gms-audience__tag">{role}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="gms-cta">
    <div class="container">
      <div class="gms-cta__content">
        <h2 class="gms-cta__title">
          Stop taking notes. Start having better meetings.
        </h2>
        <p class="gms-cta__desc">
          Install the extension and get AI-powered summaries after
          your very next call.
        </p>
        <a
          href={chromeStoreUrl}
          class="gms-btn gms-btn--primary"
          target="_blank"
          rel="noopener noreferrer"
        >
          Add to Chrome ‚Äî It's Free
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* =====================================================
     Hero
     ===================================================== */
  .gms-hero {
    padding: var(--space-16) 0 var(--space-12);
    position: relative;
  }

  .gms-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: radial-gradient(
      ellipse 60% 80% at 50% 0%,
      hsla(28, 100%, 70%, 0.08),
      transparent
    );
    pointer-events: none;
  }

  .gms-hero__content {
    max-width: 640px;
  }

  .gms-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: 4px var(--space-4);
    background: var(--gray-50);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--gray-600);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin-bottom: var(--space-6);
  }

  .gms-hero__badge-dot {
    width: 8px;
    height: 8px;
    border-radius: var(--radius-full);
    background: var(--color-accent);
    animation: dotPulse 2s ease-in-out infinite;
  }

  @keyframes dotPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .gms-hero__title {
    font-family: var(--font-display);
    font-size: var(--text-5xl);
    font-weight: 700;
    line-height: 1.15;
    color: var(--gray-900);
    margin-bottom: var(--space-5);
  }

  .gms-hero__accent {
    background: var(--color-accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .gms-hero__subtitle {
    font-size: var(--text-lg);
    line-height: 1.7;
    color: var(--gray-600);
    margin-bottom: var(--space-8);
  }

  .gms-hero__cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .gms-hero__note {
    font-size: var(--text-xs);
    color: var(--gray-400);
    margin: 0;
  }

  /* =====================================================
     Shared Button Styles
     ===================================================== */
  .gms-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: 14px 24px;
    font-weight: 600;
    font-size: var(--text-sm);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition:
      transform var(--transition-base),
      box-shadow var(--transition-base),
      background var(--transition-fast);
  }

  .gms-btn:hover {
    transform: translateY(-2px);
  }

  .gms-btn--primary {
    background: var(--gray-900);
    color: white;
    box-shadow: var(--shadow-md);
  }

  .gms-btn--primary:hover {
    background: var(--color-accent);
    box-shadow: var(--shadow-lg), var(--shadow-accent);
  }

  .gms-btn--ghost {
    background: transparent;
    color: var(--gray-600);
    border: 1px solid var(--gray-200);
  }

  .gms-btn--ghost:hover {
    background: var(--gray-50);
    border-color: var(--gray-300);
    box-shadow: var(--shadow-sm);
  }

  /* =====================================================
     Section Headers
     ===================================================== */
  .gms-section-header {
    margin-bottom: var(--space-12);
    max-width: 540px;
  }

  .gms-section-header__title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--gray-900);
    line-height: 1.25;
    margin-bottom: var(--space-3);
  }

  .gms-section-header__desc {
    font-size: var(--text-base);
    color: var(--gray-500);
    line-height: 1.7;
    margin: 0;
  }

  /* =====================================================
     Features Grid
     ===================================================== */
  .gms-features {
    padding: var(--space-16) 0;
  }

  .gms-features__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }

  .gms-feature-card {
    padding: var(--space-6);
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-xl);
    transition:
      transform var(--transition-base),
      box-shadow var(--transition-base),
      border-color var(--transition-base);
  }

  .gms-feature-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-card-hover);
    border-color: var(--gray-300);
  }

  .gms-feature-card__icon {
    display: block;
    font-size: 1.75rem;
    margin-bottom: var(--space-4);
  }

  .gms-feature-card__title {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: var(--space-2);
    line-height: 1.3;
  }

  .gms-feature-card__desc {
    font-size: var(--text-sm);
    color: var(--gray-500);
    line-height: 1.7;
    margin: 0;
  }

  /* =====================================================
     How It Works (Steps)
     ===================================================== */
  .gms-steps {
    padding: var(--space-16) 0;
    background: var(--gray-50);
    border-top: 1px solid var(--gray-100);
    border-bottom: 1px solid var(--gray-100);
  }

  .gms-steps__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    max-width: 600px;
  }

  .gms-step {
    display: flex;
    gap: var(--space-5);
    align-items: flex-start;
  }

  .gms-step__number {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border: 2px solid var(--gray-200);
    border-radius: var(--radius-md);
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-accent);
  }

  .gms-step__content {
    padding-top: 2px;
  }

  .gms-step__title {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: var(--space-1);
  }

  .gms-step__desc {
    font-size: var(--text-sm);
    color: var(--gray-500);
    line-height: 1.7;
    margin: 0;
  }

  /* =====================================================
     Audience
     ===================================================== */
  .gms-audience {
    padding: var(--space-16) 0;
  }

  .gms-audience__card {
    padding: var(--space-8);
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-xl);
    text-align: center;
  }

  .gms-audience__title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: var(--space-6);
    max-width: 480px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.3;
  }

  .gms-audience__tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-2);
  }

  .gms-audience__tag {
    display: inline-flex;
    padding: 6px 14px;
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--gray-600);
    background: var(--gray-50);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-full);
  }

  /* =====================================================
     Bottom CTA
     ===================================================== */
  .gms-cta {
    padding: var(--space-16) 0 var(--space-24);
  }

  .gms-cta__content {
    text-align: center;
    max-width: 520px;
    margin: 0 auto;
  }

  .gms-cta__title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--gray-900);
    line-height: 1.25;
    margin-bottom: var(--space-4);
  }

  .gms-cta__desc {
    font-size: var(--text-base);
    color: var(--gray-500);
    line-height: 1.7;
    margin-bottom: var(--space-8);
  }

  /* =====================================================
     Responsive
     ===================================================== */
  @media (max-width: 1024px) {
    .gms-features__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .gms-hero {
      padding: var(--space-12) 0 var(--space-8);
    }

    .gms-hero__title {
      font-size: var(--text-4xl);
    }

    .gms-features__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .gms-features {
      padding: var(--space-12) 0;
    }

    .gms-steps {
      padding: var(--space-12) 0;
    }

    .gms-section-header {
      margin-bottom: var(--space-8);
    }

    .gms-section-header__title {
      font-size: var(--text-2xl);
    }

    .gms-audience {
      padding: var(--space-12) 0;
    }

    .gms-audience__card {
      padding: var(--space-6);
    }

    .gms-audience__title {
      font-size: var(--text-xl);
    }

    .gms-cta {
      padding: var(--space-12) 0 var(--space-16);
    }

    .gms-cta__title {
      font-size: var(--text-2xl);
    }

    .gms-btn {
      padding: 12px 20px;
    }
  }
</style>
