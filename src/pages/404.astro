---
/**
 * 404 â€” Custom "Not Found" page.
 * Provides friendly messaging and navigation back to key sections.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found | Prince Jain" description="The page you're looking for doesn't exist. Head back to the homepage or explore blog posts and work.">
  <section class="not-found">
    <div class="container not-found__container">
      <p class="not-found__code">404</p>
      <h1 class="not-found__title">Page not found</h1>
      <p class="not-found__message">
        The page you're looking for doesn't exist or has been moved.
        Let's get you back on track.
      </p>
      <div class="not-found__links">
        <a href="/" class="btn-gradient">
          <span>Back to Home</span>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/blogs" class="btn-outline">
          <span>Read the Blog</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .not-found {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
    padding: var(--space-16) 0;
  }

  .not-found__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
  }

  .not-found__code {
    font-family: var(--font-display);
    font-size: clamp(5rem, 15vw, 10rem);
    font-weight: 700;
    line-height: 1;
    background: linear-gradient(
      135deg,
      var(--color-accent),
      var(--color-accent-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
  }

  .not-found__title {
    font-size: var(--text-3xl);
    color: var(--gray-900);
    margin: 0;
  }

  .not-found__message {
    font-size: var(--text-lg);
    color: var(--gray-600);
    max-width: 440px;
    line-height: 1.6;
    margin: 0;
  }

  .not-found__links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    margin-top: var(--space-4);
    justify-content: center;
  }

  /* Reuse CTA button styles from HeroSection */
  .btn-gradient {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: 14px 24px;
    background: linear-gradient(
      135deg,
      var(--color-accent),
      var(--color-accent-secondary)
    );
    color: white;
    border-radius: var(--radius-full);
    font-weight: 600;
    font-size: var(--text-base);
    box-shadow: 0 4px 14px rgba(255, 94, 50, 0.3);
    transition: all var(--transition-base);
    text-decoration: none;
  }

  .btn-gradient:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 94, 50, 0.4);
  }

  .btn-gradient svg {
    transition: transform var(--transition-fast);
  }

  .btn-gradient:hover svg {
    transform: translateX(4px);
  }

  .btn-outline {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: 14px 24px;
    background: white;
    border: 1px solid var(--gray-200);
    color: var(--gray-900);
    border-radius: var(--radius-full);
    font-weight: 600;
    font-size: var(--text-base);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
    text-decoration: none;
  }

  .btn-outline:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    background: var(--gray-50);
  }
</style>
