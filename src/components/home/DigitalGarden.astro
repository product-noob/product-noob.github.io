---
import type { WorkshopProject, HomelabService } from '../../data/projects';
import { vibeCodingStack } from '../../data/projects';

interface Props {
  projects: WorkshopProject[];
  services: HomelabService[];
}

const { projects, services } = Astro.props;
---

<!-- Typographic Pause -->
<section class="section section--pause text-center">
  <div class="container">
    <h2 class="pause-statement">
      AI will not replace <span class="text-accent">you</span>,<br>
      A person using AI <span class="text-accent-secondary">will</span>.
    </h2>
  </div>
</section>

<!-- Side Quests -->
<section class="section garden" id="side-quests">
  <div class="container">
    <div class="garden__header">
      <h2 class="garden__title">Side Quests</h2>
      <p class="garden__subtitle">Where I spend my weekends and free time to tinker and do experiments.</p>
    </div>

    <!-- â•â•â•â•â•â•â•â•â•â•â• 1. Projects â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="garden__subsection">
      <h3 class="subsection__label">
        <span class="subsection__icon">ğŸ› ï¸</span>
        Personal Projects
      </h3>

      <div class="projects-grid animate-on-scroll">
        {projects.map((project, i) => (
          <div class="project-card-v2" style={`--card-delay: ${i * 80}ms`}>
            <div class="project-card-v2__inner">
              <div class="project-card-v2__header">
                <span class="project-card-v2__icon">
                  {project.icon.startsWith('/') ? (
                    <img src={project.icon} alt={project.title} width="24" height="24" loading="lazy" />
                  ) : (
                    project.icon
                  )}
                </span>
                <h4 class="project-card-v2__title">{project.title}</h4>
              </div>
              <p class="project-card-v2__desc">{project.description}</p>
              <div class="project-card-v2__footer">
                <div class="project-card-v2__tags">
                  {project.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
                {project.link && (
                  <a
                    href={project.link}
                    class="project-card-v2__link"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Visit
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M7 17L17 7M17 7H7M17 7V17"/>
                    </svg>
                  </a>
                )}
              </div>
            </div>
            <div class="project-card-v2__glow"></div>
          </div>
        ))}
      </div>
    </div>
    <!-- â•â•â•â•â•â•â•â•â•â•â• 2. The Home Lab â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="garden__subsection" id="homelab">
      <h3 class="subsection__label">
        <span class="subsection__icon">ğŸ–¥ï¸</span>
        The Home Lab
      </h3>
      <p class="subsection__desc">Services I self-host on my home server, always running.</p>

      <div class="homelab-rack animate-on-scroll">
        {services.map((svc, i) => (
          <div class="homelab-row" style={`--row-delay: ${i * 80}ms`}>
            <span class="homelab-row__icon">
              {svc.icon.startsWith('/') ? (
                <img src={svc.icon} alt={svc.title} width="24" height="24" loading="lazy" />
              ) : (
                svc.icon
              )}
            </span>
            <div class="homelab-row__info">
              <h4 class="homelab-row__title">{svc.title}</h4>
              <p class="homelab-row__desc">{svc.description}</p>
            </div>
            {svc.tags && svc.tags.length > 0 && (
              <div class="homelab-row__tags">
                {svc.tags.map((tag) => (
                  <span class="tag tag--small">{tag}</span>
                ))}
              </div>
            )}
            {svc.link && (
              <a
                href={svc.link}
                class="homelab-row__link"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Open ${svc.title}`}
              >
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M7 17L17 7M17 7H7M17 7V17"/>
                </svg>
              </a>
            )}
            {svc.live && (
              <span class="live-pill">
                <span class="live-pill__dot"></span>
                LIVE
              </span>
            )}
          </div>
        ))}  
      </div>
    </div>



    <!-- â•â•â•â•â•â•â•â•â•â•â• 3. Vibe Coding / AI Stack â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="garden__subsection">
      <h3 class="subsection__label">
        <span class="subsection__icon">âš¡</span>
        My Vibe Coding / AI Stack
      </h3>

      <div class="vibe-banner animate-on-scroll" id="vibe-coding">
        <div class="vibe-banner__inner">
          <ul class="vibe-banner__list">
            <li>
              <strong>Cursor + Claude Code</strong>
              <span class="vibe-banner__dim">â†’ For vibe-coding.</span>
              My
              <a href={vibeCodingStack.cursorMdUrl} target="_blank" rel="noopener noreferrer" class="vibe-banner__link">
                cursor.md
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
              </a>
            </li>
            <li>
              <strong>ChatGPT / Gemini</strong>
              <span class="vibe-banner__dim">â†’ brainstorming & writing</span>
            </li>
            <li>
              <strong>FAL Flux/ Gemini Nano Banana</strong>
              <span class="vibe-banner__dim">â†’ image generation</span>
            </li>
            <li>
              <strong>Supabase</strong>
              <span class="vibe-banner__dim">â†’ Authentication and DB</span>
            </li>
            <li>
              <strong>Google ADK, Langchain</strong>
              <span class="vibe-banner__dim">â†’ Multi-Agent Orchestrations</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

  </div>
</section>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.15,
      rootMargin: '0px 0px -50px 0px',
    });

    document.querySelectorAll('.animate-on-scroll').forEach((el) => {
      observer.observe(el);
    });
  });
</script>

<style>
  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     Typographic Pause
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  .text-accent {
    color: var(--color-accent);
    font-weight: 500;
  }

  .text-accent-secondary {
    color: var(--color-accent-secondary);
    font-weight: 500;
  }

  .section--pause {
    padding: var(--space-32) 0;
    background: white;
  }

  .pause-statement {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.2;
    color: var(--gray-900);
    letter-spacing: -0.02em;
  }

  .text-center { text-align: center; }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     Garden Section
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  .garden {
    background: var(--bg-cool);
    padding: var(--space-16) 0 var(--space-24);
  }

  .garden__header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-12);
  }

  .garden__title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    .garden__title { font-size: var(--text-5xl); }
  }

  .garden__subtitle {
    font-size: var(--text-base);
    color: var(--gray-500);
    line-height: 1.6;
    margin: 0;
  }

  /* â”€â”€ Sub-section â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .garden__subsection {
    margin-bottom: var(--space-12);
  }

  .subsection__label {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: var(--space-2);
    position: relative;
    padding-bottom: var(--space-3);
  }

  .subsection__label::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 48px;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent), transparent);
    border-radius: 2px;
  }

  .subsection__icon {
    font-size: 1.4rem;
    line-height: 1;
  }

  .subsection__desc {
    font-size: var(--text-sm);
    color: var(--gray-500);
    margin: 0 0 var(--space-6) 0;
    line-height: 1.5;
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     1. Home Lab â€” Server Rack with LIVE pills
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  .homelab-rack {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .homelab-rack.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .homelab-rack.visible .homelab-row {
    animation: fadeUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) backwards;
    animation-delay: var(--row-delay);
  }

  .homelab-row {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4) var(--space-5);
    background: var(--glass-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .homelab-row:hover {
    background: var(--glass-bg-heavy);
    border-color: var(--gray-300);
    box-shadow: var(--shadow-md);
    transform: translateX(4px);
  }

  /* â”€â”€ LIVE pill â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .live-pill {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 3px 10px;
    background: #16a34a;
    color: white;
    font-family: var(--font-mono);
    font-size: 0.6rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: var(--radius-full);
    flex-shrink: 0;
    box-shadow: 0 2px 8px rgba(22, 163, 74, 0.3);
  }

  .live-pill__dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: white;
    animation: liveBlink 1.4s ease-in-out infinite;
  }

  @keyframes liveBlink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  .homelab-row__icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-sm);
    background: var(--gray-50);
    border: 1px solid var(--gray-100);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
    transition: transform var(--transition-bounce);
  }

  .homelab-row:hover .homelab-row__icon {
    transform: scale(1.1);
  }

  .homelab-row__icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .homelab-row__info {
    flex: 1;
    min-width: 0;
  }

  .homelab-row__title {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--gray-900);
    margin: 0 0 2px 0;
    line-height: 1.3;
  }

  .homelab-row__desc {
    font-size: var(--text-xs);
    color: var(--gray-500);
    line-height: 1.5;
    margin: 0;
  }

  .homelab-row__tags {
    display: flex;
    gap: var(--space-1);
    flex-shrink: 0;
  }

  .tag--small {
    padding: 2px 8px;
    font-size: 0.6rem;
  }

  .homelab-row__link {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: var(--radius-sm);
    color: var(--gray-400);
    transition: all var(--transition-fast);
  }

  .homelab-row__link:hover {
    color: var(--color-accent);
    background: var(--color-accent-glow);
  }

  .homelab-row__link svg {
    transition: transform var(--transition-fast);
  }

  .homelab-row__link:hover svg {
    transform: translate(1px, -1px);
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     2. Projects â€” Clean Card Grid (no sub-label)
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-5);
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .projects-grid.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .projects-grid.visible .project-card-v2 {
    animation: fadeUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) backwards;
    animation-delay: var(--card-delay);
  }

  .project-card-v2 {
    position: relative;
    border-radius: var(--radius-lg);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .project-card-v2__inner {
    position: relative;
    z-index: 1;
    background: var(--glass-bg-heavy);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-5);
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    box-shadow: var(--shadow-card);
    transition: all var(--transition-base);
  }

  .project-card-v2__glow {
    position: absolute;
    inset: 0;
    border-radius: var(--radius-lg);
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-secondary));
    opacity: 0;
    z-index: 0;
    transition: opacity var(--transition-base);
    padding: 2px;
  }

  .project-card-v2:hover {
    transform: translateY(-5px);
  }

  .project-card-v2:hover .project-card-v2__inner {
    border-color: transparent;
    box-shadow: var(--shadow-card-hover);
  }

  .project-card-v2:hover .project-card-v2__glow {
    opacity: 1;
  }

  .project-card-v2__header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .project-card-v2__icon {
    width: 44px;
    height: 44px;
    border-radius: var(--radius-md);
    background: linear-gradient(135deg, var(--gray-100), var(--gray-50));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
    flex-shrink: 0;
    box-shadow:
      inset 0 1px 0 var(--glass-bg),
      0 2px 4px var(--border-subtle);
    transition: transform var(--transition-bounce), background var(--transition-base);
  }

  .project-card-v2:hover .project-card-v2__icon {
    transform: scale(1.08) rotate(-3deg);
    background: linear-gradient(135deg, hsla(28, 100%, 95%, 1), hsla(28, 100%, 90%, 1));
  }

  .project-card-v2__icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .project-card-v2__title {
    font-family: var(--font-display);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--gray-900);
    margin: 0;
    line-height: 1.3;
  }

  .project-card-v2__desc {
    font-size: var(--text-xs);
    color: var(--gray-600);
    line-height: 1.6;
    margin: 0;
  }

  .project-card-v2__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
    margin-top: auto;
    flex-wrap: wrap;
  }

  .project-card-v2__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag {
    display: inline-flex;
    align-items: center;
    padding: 3px 9px;
    font-size: var(--text-2xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: linear-gradient(135deg, var(--gray-100), var(--gray-50));
    color: var(--gray-600);
    border-radius: var(--radius-full);
    border: 1px solid var(--gray-200);
    transition: all var(--transition-fast);
  }

  .project-card-v2:hover .tag {
    background: white;
    border-color: var(--gray-300);
    color: var(--gray-800);
  }

  .project-card-v2__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-accent);
    text-decoration: none;
    transition: gap var(--transition-fast);
    flex-shrink: 0;
  }

  .project-card-v2__link:hover {
    gap: var(--space-2);
  }

  .project-card-v2__link svg {
    transition: transform var(--transition-fast);
  }

  .project-card-v2__link:hover svg {
    transform: translate(2px, -2px);
  }

  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     3. Vibe Coding â€” Dark Banner, Bullet Format
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  .vibe-banner {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .vibe-banner.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .vibe-banner__inner {
    background: var(--gray-900);
    border-radius: var(--radius-lg);
    padding: var(--space-6) var(--space-8);
    box-shadow: var(--shadow-lg);
    position: relative;
    overflow: hidden;
  }

  /* Subtle gradient overlay */
  .vibe-banner__inner::before {
