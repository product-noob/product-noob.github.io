---
/**
 * ProjectCard Component
 * A modern card for showcasing projects with glassmorphism and gradient effects.
 */
import type { ProjectCardProps } from '../types';

interface Props extends ProjectCardProps {}

const { title, description, icon = 'ðŸš€', link, tags = [], variant = 'default' } = Astro.props;
const isCompact = variant === 'compact';
const isImageIcon = icon?.startsWith('/');
const isExternalLink = link?.startsWith('http');
---

<div class={`project-card ${isCompact ? 'project-card--compact' : ''}`}>
  <div class="project-card__inner">
    <div class="project-card__header">
      <div class="project-card__icon">
        {isImageIcon ? (
          <img src={icon} alt="" class="project-card__icon-image" width="24" height="24" loading="lazy" />
        ) : (
          <span class="project-card__icon-emoji">{icon}</span>
        )}
      </div>
      <div class="project-card__header-content">
        <h3 class="project-card__title">{title}</h3>
        {isCompact && <p class="project-card__description">{description}</p>}
      </div>
    </div>
    
    {isCompact && link && link !== '#' && (
      <a
        href={link}
        class="project-card__link project-card__link--compact"
        target={isExternalLink ? "_blank" : undefined}
        rel={isExternalLink ? "noopener noreferrer" : undefined}
      >
        Open
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M7 17L17 7M17 7H7M17 7V17"/>
        </svg>
      </a>
    )}

    {!isCompact && (
      <div class="project-card__body">
        <p class="project-card__description">{description}</p>
        {tags.length > 0 && (
          <div class="project-card__tags">
            {tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
        {link && link !== '#' && (
          <a
            href={link}
            class="project-card__link"
            target={isExternalLink ? "_blank" : undefined}
            rel={isExternalLink ? "noopener noreferrer" : undefined}
          >
            View Project
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>
        )}
      </div>
    )}
  </div>
  <div class="project-card__glow"></div>
</div>

<style>
  .project-card {
    position: relative;
    border-radius: var(--radius-lg);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .project-card__inner {
    position: relative;
    z-index: 1;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    box-shadow: var(--shadow-card);
    transition: all var(--transition-base);
  }

  .project-card__glow {
    position: absolute;
    inset: 0;
    border-radius: var(--radius-lg);
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-secondary));
    opacity: 0;
    z-index: 0;
    transition: opacity var(--transition-base);
    padding: 2px;
  }

  .project-card:hover {
    transform: translateY(-6px);
  }

  .project-card:hover .project-card__inner {
    border-color: transparent;
    box-shadow: var(--shadow-card-hover);
  }

  .project-card:hover .project-card__glow {
    opacity: 1;
  }

  .project-card__header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
  }

  .project-card__icon {
    width: 52px;
    height: 52px;
    border-radius: var(--radius-md);
    background: linear-gradient(135deg, var(--gray-100), var(--gray-50));
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow:
      inset 0 1px 0 var(--glass-bg),
      var(--shadow-sm);
    transition: transform var(--transition-bounce), background var(--transition-base);
  }

  .project-card:hover .project-card__icon {
    transform: scale(1.08) rotate(-3deg);
    background: linear-gradient(135deg, hsla(28, 100%, 95%, 1), hsla(28, 100%, 90%, 1));
  }

  .project-card__icon-emoji {
    font-size: 1.5rem;
    line-height: 1;
  }

  .project-card__icon-image {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .project-card__header-content {
    flex: 1;
    min-width: 0;
  }

  .project-card__title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--gray-900);
    margin: 0;
    line-height: 1.3;
  }

  .project-card__body {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .project-card__description {
    font-size: var(--text-sm);
    color: var(--gray-600);
    line-height: 1.6;
    margin: 0;
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .project-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    margin-top: auto;
    transition: gap var(--transition-fast);
  }

  .project-card__link:hover {
    gap: var(--space-3);
  }

  .project-card__link svg {
    transition: transform var(--transition-fast);
  }

  .project-card__link:hover svg {
    transform: translate(2px, -2px);
  }

  .project-card__link--compact {
    margin-top: var(--space-2);
    font-size: var(--text-xs);
    color: var(--gray-500);
  }

  .project-card__link--compact:hover {
    color: var(--color-accent);
  }

  /* Compact variant for grid items */
  .project-card--compact .project-card__inner {
    padding: var(--space-4);
    gap: var(--space-2);
  }

  .project-card--compact .project-card__icon {
    width: 44px;
    height: 44px;
  }

  .project-card--compact .project-card__icon-emoji {
    font-size: 1.25rem;
  }

  .project-card--compact .project-card__icon-image {
    width: 20px;
    height: 20px;
  }

  .project-card--compact .project-card__title {
    font-size: var(--text-base);
  }

  .project-card--compact .project-card__description {
    font-size: var(--text-xs);
    margin-top: var(--space-1);
  }

  /* Tag styles */
  .tag {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-2);
    font-size: var(--text-2xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: linear-gradient(135deg, var(--gray-100), var(--gray-50));
    color: var(--gray-600);
    border-radius: var(--radius-full);
    border: 1px solid var(--gray-200);
    transition: all var(--transition-fast);
  }

  .project-card:hover .tag {
    background: white;
    border-color: var(--gray-300);
    color: var(--gray-800);
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .project-card__inner {
      padding: var(--space-4);
      gap: var(--space-3);
    }

    .project-card__icon {
      width: 44px;
      height: 44px;
    }

    .project-card__icon-emoji {
      font-size: 1.25rem;
    }

    .project-card__title {
      font-size: var(--text-base);
    }

    .project-card__body {
      gap: var(--space-3);
    }

    .project-card:hover {
      transform: translateY(-3px);
    }

    .tag {
      padding: 3px var(--space-2);
      font-size: var(--text-2xs);
    }

    /* Compact on mobile */
    .project-card--compact .project-card__inner {
      padding: var(--space-3);
    }

    .project-card--compact .project-card__icon {
      width: 36px;
      height: 36px;
    }
  }
</style>
